﻿@using CarInsurance.ViewModel
@model List<QuoteVm>

<table class="table">

    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Quote</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model)
        {
            using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {

                <tr>
                    <td class="col-md-3">
                        @quote.FirstName
                    </td>
                    <td class="col-md-3">
                        @quote.LastName
                    </td>
                    <td class="col-md-3">
                        @quote.EmailAddress
                    </td>
                    <td class="col-md-3">
                        <p>$@quote.Quote</p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<input type="button" class="btn btn-success" value="New Customer" onclick="location.href='@Url.Action("Create", "Insuree")'" />